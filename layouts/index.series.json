{{- /* This json string is used in Pages CMS to show a list of series taxonomy terms used on the site */}}
{{- $s := newScratch }}
{{- $s.Add "series" slice }}
{{- range $series, $pages := site.Taxonomies.series }}
  {{- $s.Add "series" (dict "id" $series "name" $series) }}
{{- end }}
{{- $s.Get "series" | jsonify }}
